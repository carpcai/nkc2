extends bootstrap_base.jade

block title
  title #{data.user.username} - 科创论坛
  meta#replytarget(value='#{data.replytarget}')

block content
  .container
    .row
      .col-md-12
        .panel.panel-default
          .panel-body

            h1 #{data.user.username}
            img(src='/avatar/#{data.user._key}')
            
            //upload section
            div
              div
                input#select-file(type='file' target='avatar/')
              div
                button(onclick='uploadfile_click()') 上传
              div#paste_target 黏贴上传测试中。
              
            hr
            a.btn.btn-default(href='/interface/editor?target=#{data.replytarget}') 修改个人简介

  include debug_output.jade
    
block scripts
  script(src='/interface_common.js')
  script(src='/interface_uploader.js')
  
  script.
    function upload_success(){
      location.reload();
    }
      
      
